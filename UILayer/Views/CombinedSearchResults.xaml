<UserControl x:Class="TourPlanner.UILayer.Views.CombinedSearchResults"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">

    <Border Margin="10" Background="White" CornerRadius="10" BorderBrush="#A4B465" BorderThickness="3">
        <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:SearchBar Grid.Row="0"
                         DataContext="{Binding SearchBarViewModel}"
                         Margin="0,0,0,15"/>

        <TabControl Grid.Row="1" Background="#FAF9F6" BorderThickness="0" FontFamily="/UILayer/Resources/Fonts/#Montserrat" >
            <TabItem Header="Tours">
                <ListView ItemsSource="{Binding Tours}"
                          SelectedItem="{Binding SelectedTour, Mode=TwoWay}"
                          Background="#F5F5DC"
                          BorderBrush="#A4B465"
                          BorderThickness="2"
                          Margin="5"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          Padding="5"
                          FontSize="14"
                          Foreground="#333">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="#446644"/>
                                <TextBlock Text="{Binding Description}" FontSize="14" Foreground="#557755" TextWrapping="Wrap" MaxHeight="70"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>

            <TabItem Header="TourLogs">
                <ListView ItemsSource="{Binding Logs}"
                          SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                          Background="#FFF6B6"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Comment}" FontSize="16" Foreground="Black" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Date}" FontSize="13" Foreground="DarkSlateGray"/>
                                <TextBlock Text="Difficulty: {Binding Difficulty}" FontSize="13" Foreground="DarkSlateGray"/>
                                <TextBlock Text="Rating: {Binding Rating}" FontSize="13" Foreground="DarkSlateGray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>
        </Grid>
    </Border>
</UserControl>