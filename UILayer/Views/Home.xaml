<UserControl x:Class="TourPlanner.UILayer.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="#F0BB78"
            Background="#F5ECD5"
            BorderThickness="3"
            CornerRadius="12"
            Margin="10">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: Tour Management, Searchbar and Tour List -->
            <views:TourManagement Grid.Column="0"
                                  Margin="0,0,5,0"
                                  DataContext="{Binding TourManagementViewModel}"/>

            <!-- Right side: Tour Details and Logs -->
            <Grid Grid.Column="2"
                  Margin="5,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Navbar height -->
                    <RowDefinition Height="*"/>
                    <!-- Map/Image area -->
                    <RowDefinition Height="Auto"/>
                    <!-- Tour Logs header -->
                    <RowDefinition Height="*"/>
                    <!-- Tour Logs list -->
                </Grid.RowDefinitions>

                <views:TourNavbar Grid.Row="0"/>

                <!-- Placeholder for Map/Image -->
                <Border Grid.Row="1"
                        BorderBrush="#A4B465"
                        BorderThickness="3"
                        CornerRadius="0,0,10,10"/>
                    <views:Map/>

                    <views:TourLogsManagement x:Name="TourLogsView" 
                                              Grid.Row="3"
                                              Grid.RowSpan="2"
                                              DataContext="{Binding TourLogsManagementViewModel}"/>
            </Grid>
        </Grid>
    </Border>
    
</UserControl>
