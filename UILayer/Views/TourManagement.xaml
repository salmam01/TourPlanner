<UserControl x:Class="TourPlanner.UILayer.Views.TourManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Tours"
                   Margin="10,0,0,0"
                   Foreground="White"
                   FontSize="18"
                   FontFamily="Dubai"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   MaxHeight="35"/>

        <StackPanel Grid.Row="0" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    MaxHeight="35"
                    Width="Auto">
            <Button Content="+"
                    Foreground="Black"
                    FontSize="18"
                    MinWidth="30"
                    VerticalContentAlignment="Center"
                    Command="{Binding DataContext.ShowCreateTourCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="-"
                    Foreground="Black"
                    MinWidth="30"
                    FontSize="18"
                    VerticalContentAlignment="Center"
                    Command="{Binding DeleteTourCommand}"/>
            <Button Content="..."
                    Foreground="Black"
                    MinWidth="30"
                    FontSize="18"
                    VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <views:SearchBar Grid.Row="1"
                         DataContext="{Binding SearchBarViewModel}"/>

        <views:TourList x:Name="TourListView" 
                        Grid.Row="2"
                        DataContext="{Binding TourListViewModel}"/>

    </Grid>
</UserControl>
