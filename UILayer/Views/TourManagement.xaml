<UserControl x:Class="TourPlanner.UILayer.Views.TourManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <Border CornerRadius="10" 
            BorderBrush="#A4B465"
            Background="#A4B465"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Title and Buttons -->
            <TextBlock Text="Tours"
                       Margin="10"
                       Foreground="White"
                       FontSize="16"
                       FontFamily="/UILayer/Resources/Fonts/#Montserrat"
                       FontWeight="Medium"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">

                <!-- Buttons for Tour management -->
                <Button Grid.Column="2" 
                        Content="+"
                        Margin="2"
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding CreateTourCommand}"/>
                <Button Grid.Column="3"
                        Content="-"
                        Margin="2"
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding DeleteTourCommand}"/>
                <Button Grid.Column="4" 
                        Content="..."
                        Margin="2"
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding EditTourCommand}"/>

            </StackPanel>

            <!-- Search Bar -->
            <views:SearchBar Grid.Row="1"
                             DataContext="{Binding SearchBarViewModel}"/>

            <!-- Tour List -->
            <views:TourList x:Name="TourListView"
                            Grid.Row="2"
                            Background="White"
                            DataContext="{Binding TourListViewModel}"/>

        </Grid>
    </Border>
</UserControl>
