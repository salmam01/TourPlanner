<UserControl x:Class="TourPlanner.UILayer.Views.TourLogsManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="TourLogs"
                   Margin="10,0,0,0"
                   Foreground="White"
                   FontSize="18"
                   FontFamily="Dubai"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   MaxHeight="35"/>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Height="35"
                    Width="Auto">
            <Button Content="+"
                    Foreground="Black"
                    FontSize="18"
                    MinWidth="30"
                    Command="{Binding CreateTourLogCommand}"/>
            <Button Content="-"
                    Foreground="Black"
                    MinWidth="30"
                    FontSize="18"
                    Command="{Binding DeleteTourLogCommand}"/>
            <Button Content="..."
                    Foreground="Black"
                    MinWidth="30"
                    FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>
