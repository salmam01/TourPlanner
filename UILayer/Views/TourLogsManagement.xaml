<UserControl x:Class="TourPlanner.UILayer.Views.TourLogsManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UILayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border CornerRadius="10" 
            BorderBrush="#0078D7"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Title and Buttons -->
            <Grid Grid.Row="0" Background="#0078D7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Tours"
                   Margin="10"
                   Foreground="White"
                   FontSize="16"
                   FontFamily="/UILayer/Resources/Fonts/#Montserrat"
                   FontWeight="Medium"
                   VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       Margin="5,0">
                    <Button Content="+"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="2,0"
                        Background="Transparent"
                        Foreground="White"
                        Command="{Binding CreateTourLogCommand}"/>
                    <Button Content="-"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="2,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Command="{Binding DeleteTourLogCommand}"/>
                    <Button Content="..."
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="2,0,5,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Command="{Binding EditTourLogCommand}"/>
                </StackPanel>
            </Grid>

            <!--- Tour Logs Table -->
            <views:TourLogList Grid.Row="1"
                           DataContext="{Binding TourLogListViewModel}"/>
        </Grid>
    </Border>
</UserControl>
