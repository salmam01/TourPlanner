<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="TourPlanner.UILayer.ViewModels"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="TourPlanner" Height="450" Width="800"
        Background="Transparent">

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="TourPlanner"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0"
                   Foreground="White"
                   FontSize="16"/>

            <DockPanel Grid.Row="0" Grid.Column="2" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Stretch">
                <RadioButton Content="File"
                             Foreground="White"
                             FontSize="16"
                             Width="100"
                             HorizontalAlignment="Stretch"/>
                <RadioButton Content="Edit"
                             Foreground="White"
                             FontSize="16"
                             Width="100"
                             HorizontalAlignment="Stretch"/>
                <RadioButton Content="Options"
                             Foreground="White"
                             FontSize="16"
                             Width="120"
                             HorizontalAlignment="Stretch"/>
                <RadioButton Content="Help"
                             Foreground="White"
                             FontSize="16"
                             HorizontalAlignment="Stretch"/>
            </DockPanel>

            <TextBox Grid.Row="1"
                     Grid.ColumnSpan="2"
                     Text="Search" 
                     TextChanged="TextBox_TextChanged"
                     FontSize="16"
                     Padding="12,0,10,0"
                     Background="AliceBlue"/>

            <Label Grid.Row="2" 
                   Grid.Column="0"
                   Content="Tours"
                   Margin="10,0,0,0"
                   Foreground="White"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="2"
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button Content="+"
                        Foreground="Black"
                        FontSize="16"
                        Command="{Binding AddTourCommand}"/>
                <Button Content="-"
                        Foreground="Black"
                        FontSize="16"
                        Command="{Binding DeleteTourCommand}"/>
                <Button Content="..."
                        Foreground="Black"
                        FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Grid.Column="1" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <RadioButton Content="General"
                 Foreground="White"
                 FontSize="16"/>
                <RadioButton Content="Route"
                 Foreground="White"
                 FontSize="16"/>
                <RadioButton Content="Misc"
                 Foreground="White"
                 FontSize="16"/>
            </StackPanel>

            <Label Grid.Column="1"
                   Grid.Row="4" 
                   Content="Tour Logs"
                   Foreground="White"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Margin="0,0,20,0">
                <Button Content="+"
                        Foreground="Black"
                        FontSize="16"/>
                <Button Content="-"
                        Foreground="Black"
                        FontSize="16"/>
                <Button Content="..."
                        Foreground="Black"
                        FontSize="16"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
