<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="TourPlanner.UILayer.ViewModels"
        xmlns:views="clr-namespace:TourPlanner.UILayer.Views"
        mc:Ignorable="d"
        Title="TourPlanner" Height="550" Width="800"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize">
    
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/UILayer/Resources/Images/Background.jpg"/>
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.85">

            <Border.Background>
                <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                    <GradientStop Color="#1D2E28" Offset="0"/>
                    <GradientStop Color="#234F1E" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#378805" Offset="0"/>
                    <GradientStop Color="#86DC3D" Offset="0.75"/>
                    <GradientStop Color="#C5E90B" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                                
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl x:Name="MainContent"/>

                    <TextBlock Grid.Column="0" 
                               Text="TourPlanner"
                               Foreground="LightCyan"
                               FontSize="16"
                               FontFamily="Dubai"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button Grid.Column="6"
                            x:Name="buttonMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="15"
                            Cursor="Hand"
                            Click="buttonMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#86DC3D"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#86DC3D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="7"
                            x:Name="buttonClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            Cursor="Hand"
                            Click="buttonClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#86DC3D"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#86DC3D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1"
                            Content="File"
                            FontFamily="Dubai"
                            FontSize="14"
                            VerticalAlignment="Center"
                            BorderThickness="0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Edit"
                            FontFamily="Dubai"
                            FontSize="14"
                            VerticalAlignment="Center"
                            BorderThickness="0"/>
                    
                    <Button Grid.Column="3" 
                            Content="Options"
                            FontFamily="Dubai"
                            FontSize="14"
                            VerticalAlignment="Center"
                            BorderThickness="0"/>

                    <Button Grid.Column="4" 
                            Content="Help"
                            FontFamily="Dubai"
                            FontSize="14"
                            VerticalAlignment="Center"
                            BorderThickness="0"/>
                </Grid>

                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <views:TourManagement Grid.Row="0"/>
                        <views:SearchBar Grid.Row="1"/>
                        <views:TourList Grid.Row="2"/>

                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="230"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <views:TourNavbar Grid.Row="0"/>

                        <views:TourLogsManagement Grid.Row="2"/>

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
