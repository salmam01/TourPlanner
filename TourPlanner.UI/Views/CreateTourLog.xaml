<UserControl x:Class="TourPlanner.UI.Views.CreateTourLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">

    <Border BorderBrush="#F0BB78"
            Background="#F5ECD5"
            BorderThickness="3"
            CornerRadius="12"
            Margin="15">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#A4B465"
                    CornerRadius="10,10,0,0">

                <TextBlock Text="Create Tour Log"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           FontSize="22"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontWeight="Bold"
                           Padding="15"/>
            </Border>
            
            <!-- Date -->
            <Grid Grid.Row="1" Margin="10,15,10,10"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           VerticalAlignment="Center"/>
                <DatePicker Grid.Column="1"
                            VerticalAlignment="Center"
                            SelectedDate="{Binding Date}"
                            FontFamily="/UI/Resources/Fonts/#Montserrat"
                            FontSize="16"/>
            </Grid>

            <!-- Comment -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Comment"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           VerticalAlignment="Top"
                           Padding="5"/>
                <TextBox Grid.Column="1"
                         Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="/UI/Resources/Fonts/#Montserrat"
                         FontSize="16"
                         Foreground="Black"
                         BorderBrush="Gray"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="5"
                         Height="80"
                         Width="400"
                         HorizontalAlignment="Left"
                         VerticalScrollBarVisibility="Auto"/>
            </Grid>

            <!-- Difficulty -->
            <Grid Grid.Row="3" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Difficulty"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           VerticalAlignment="Center"/>
                <Slider Grid.Column="1"
                        Value="{Binding Difficulty}"
                        Minimum="1"
                        Maximum="5"
                        IsSnapToTickEnabled="True"
                        TickFrequency="1"
                        Padding="5"
                        VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           Text="{Binding Difficulty, StringFormat=F0}"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- Rating -->
            <Grid Grid.Row="4" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Rating"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           VerticalAlignment="Center"/>
                <Slider Grid.Column="1"
                        Padding="5"
                        Value="{Binding Rating}"
                        Minimum="1"
                        Maximum="5"
                        IsSnapToTickEnabled="True"
                        TickFrequency="1"
                        VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           Padding="5"
                           Text="{Binding Rating, StringFormat=F0}"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- Total Distance -->
            <Grid Grid.Row="5" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Total Distance"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding TotalDistance, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="/UI/Resources/Fonts/#Montserrat"
                             FontSize="16"
                             Padding="5"
                             Foreground="Black"
                             BorderBrush="Gray"
                             VerticalAlignment="Center"
                             Width="100"
                             HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="1"
                               Text="km"
                               Foreground="Black"
                               FontFamily="/UI/Resources/Fonts/#Montserrat"
                               FontSize="16"
                               Padding="5"
                               Margin="5,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>

            <!-- Total Time -->
            <Grid Grid.Row="6" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Total Time"
                           Foreground="Black"
                           FontFamily="/UI/Resources/Fonts/#Montserrat"
                           FontSize="16"
                           Padding="5"
                           VerticalAlignment="Center"/>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="/UI/Resources/Fonts/#Montserrat"
                             FontSize="16"
                             Padding="5"
                             VerticalAlignment="Center"
                             Foreground="Black"
                             BorderBrush="Gray"
                             HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="1"
                               Text="h"
                               Foreground="Black"
                               FontFamily="/UI/Resources/Fonts/#Montserrat"
                               FontSize="16"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Padding="5"
                               Margin="2,0,10,0"/>
                    <TextBox Grid.Column="2"
                             Text="{Binding Minutes, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="/UI/Resources/Fonts/#Montserrat"
                             FontSize="16"
                             Padding="5"
                             VerticalAlignment="Bottom"
                             Foreground="Black"
                             BorderBrush="Gray"
                             HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="3"
                               Text="m"
                               Foreground="Black"
                               FontFamily="/UI/Resources/Fonts/#Montserrat"
                               FontSize="16"
                               Padding="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="2,0"/>
                </Grid>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="8"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="30,10">
                <Button Content="Cancel"
                        Margin="0,0,20,0"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelButtonStyle}"/>
                <Button Content="{Binding SubmitButtonText}"
                        Command="{Binding CreateCommand}"
                        Style="{StaticResource SubmitButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
