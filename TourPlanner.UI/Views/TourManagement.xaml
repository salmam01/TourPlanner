<UserControl x:Class="TourPlanner.UI.Views.TourManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <Border CornerRadius="10" 
            BorderBrush="#A4B465"
            Background="#A4B465"
            BorderThickness="3">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Searchbar -->
                <RowDefinition Height="*"/>   <!-- List -->
                <RowDefinition Height="Auto"/> <!-- Report Buttons -->
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <views:SearchBar Grid.Row="1"
                             DataContext="{Binding SearchBarViewModel}"/>
            
            <!-- Header with Title and Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Tours"
                           Grid.Column="0"
                           Margin="14"
                           Foreground="Black"
                           FontSize="18"
                           FontFamily="/Resources/Fonts/#Montserrat"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="7">

                    <!-- Buttons for Tour management -->
                    <Button Content="+"
                            Margin="2"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Create Tour"
                            Command="{Binding CreateTourCommand}"/>
                    <Button Content="-"
                            Margin="2"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Delete Tour"
                            Command="{Binding DeleteTourCommand}"/>
                    <Button Content=" .. "
                            Margin="2"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Edit Tour"
                            Command="{Binding EditTourCommand}"/>
                    <!-- Import Button -->
                    <Button Margin="2"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Import Tour"
                            Command="{Binding ImportToursCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE898;" FontSize="16" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Export Button -->
                    <Button Margin="1"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Export Tour"
                            Command="{Binding ExportToursCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B8;" FontSize="16" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Tour List -->
            <views:TourList x:Name="TourListView"
                            Grid.Row="2"
                            Background="#F5ECD5"
                            DataContext="{Binding TourListViewModel}"/>

            <!-- Report Buttons at bottom -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="10,5">
                <!-- Generate Tour Report-->
                <Button Command="{Binding GenerateTourReportCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        ToolTip="Generate Tour Report"
                        Margin="0,0,5,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="Tour Report" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Generate Summary Report-->
                <Button Command="{Binding GenerateSummaryReportCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        ToolTip="Generate Summary Report">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9D9;" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="Summary Report" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
