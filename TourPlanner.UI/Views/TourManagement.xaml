<UserControl x:Class="TourPlanner.UI.Views.TourManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UI.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:packIcon="http://materialdesigninxaml.net/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <Border CornerRadius="10" 
            BorderBrush="#A4B465"
            Background="#A4B465"
            BorderThickness="3">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Searchbar -->
                <RowDefinition Height="*"/>
                <!-- List -->
                <RowDefinition Height="Auto"/>
                <!-- Report Buttons -->
            </Grid.RowDefinitions>

            <!-- Header with Title and Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Tours"
                           Grid.Column="0"
                           Margin="10"
                           Foreground="Black"
                           FontSize="16"
                           FontFamily="/Resources/Fonts/#Montserrat"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="5">

                    <!-- Buttons for Tour management -->
                    <Button Content="{materialDesign:PackIcon Kind=Add}"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Create Tour"
                            Command="{Binding CreateTourCommand}"/>
                    <Button Content="{materialDesign:PackIcon Kind=Edit}"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Edit Tour"
                            Command="{Binding EditTourCommand}"/>
                    <Button Content="{materialDesign:PackIcon Kind=Delete}"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Delete Tour"
                            Command="{Binding DeleteTourCommand}"/>
                    
                    <!-- Import Button -->
                    <Button Content="{materialDesign:PackIcon Kind=Import}"
                            Margin="2"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Import Tour"
                            Command="{Binding ImportToursCommand}"/>

                    <!-- Export Button -->
                    <Button Content="{materialDesign:PackIcon Kind=Export}"
                            Margin="1"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Export Tour"
                            Command="{Binding ExportToursCommand}"/>
                </StackPanel>
                
            </Grid>
            <!-- Search Bar -->
            <views:SearchBar Grid.Row="1"
                             DataContext="{Binding SearchBarViewModel}"/>
            <!-- Tour List -->
            <views:TourList x:Name="TourListView"
                            Grid.Row="2"
                            Background="#F5ECD5"
                            DataContext="{Binding TourListViewModel}"/>

            <!-- Report Buttons at bottom -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="10,5">
                <!-- Generate Tour Report-->
                <Button Content="{materialDesign:PackIcon Kind=FileExport}"
                        Command="{Binding GenerateTourReportCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        ToolTip="Generate Tour Report"
                        Margin="0,0,5,0"/>
                <!-- Generate Summary Report-->
                <Button Content="{materialDesign:PackIcon Kind=ChartBar}"
                        Command="{Binding GenerateSummaryReportCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        ToolTip="Generate Summary Report"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
