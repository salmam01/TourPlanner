<UserControl x:Class="TourPlanner.UI.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:TourPlanner.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="#F5ECD5"
            BorderThickness="0"
            CornerRadius="12"
            Margin="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: Tour Management, Searchbar and Tour List -->
            <views:TourManagement Grid.Column="0"
                                  DataContext="{Binding TourManagementViewModel}"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>

            <!-- Right side: Tour Details and Logs -->
            <Grid Grid.Column="2"
                  Margin="5,0,0,0">

                <Grid.RowDefinitions>
                    <!-- Navbar height -->
                    <RowDefinition Height="*"/>
                    <!-- Tour Logs header -->
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>

                <views:TourNavbar Grid.Row="0" 
                                  DataContext="{Binding TourNavbarViewModel}"/>

                <views:TourLogsManagement Grid.Row="1"
                                          DataContext="{Binding TourLogsManagementViewModel}"/>
            </Grid>
        </Grid>
    </Border>

</UserControl>
