<UserControl x:Class="TourPlanner.UI.Views.TourLogsManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TourPlanner.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border CornerRadius="10" 
            BorderBrush="#A4B465"
            Background="#A4B465"
            BorderThickness="3">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Title and Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            
                <TextBlock Text="Tour Logs"
                           Margin="10"
                           Foreground="Black"
                           FontSize="18"
                           FontFamily="/Resources/Fonts/#Montserrat"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>

                <!-- Search Bar -->
                <views:SearchBar Grid.Column="1"
                                 DataContext="{Binding SearchBarViewModel}"
                                 Margin="5"
                                 Padding="5"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="5,0">
                    <Button Content="+"
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="2,0"
                            Command="{Binding CreateTourLogCommand}"/>
                    <Button Content="-"
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="2,0"
                            Command="{Binding DeleteTourLogCommand}"/>
                    <Button Content=".."
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="2,0,5,0"
                            Command="{Binding EditTourLogCommand}"
                            CommandParameter="{Binding SelectedTourLog, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
            
            <!--- Tour Logs Table -->
            <views:TourLogList Grid.Row="1"
                               DataContext="{Binding TourLogListViewModel}"/>
        </Grid>
    </Border>
</UserControl>
