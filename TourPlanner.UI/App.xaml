             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TourPlanner.UI">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Themes/WindowButtonTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/ActionButtonTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/FormFieldTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/TabItemTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/SearchbarTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/TextBlockTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
